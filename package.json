    "express": "^4.17.1",
    "express-validator": "^6.3.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "mongoose": "^5.8.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "node-telegram-bot-api": "^0.50.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "shortid": "^2.2.15"
